{
	"rootDir": "../..",
	"moduleNameMapper": {
		"\\.(css|scss)$": "<rootDir>/config/tests/styleMock.js"
	},
	"setupTestFrameworkScriptFile": "<rootDir>/node_modules/jest-enzyme/lib/index.js",
	"testEnvironment": "enzyme",
	"testEnvironmentOptions": {
		"enzymeAdapter": "react16"
	},
	"testPathIgnorePatterns": [
		"/node_modules/"
	],
	"coveragePathIgnorePatterns": [
		"/node_modules/",
		"/config/",
		"/src/.*index",
		"/src/infrastructure/getStore",
		"/src/infrastructure/icons",
		"/src/infrastructure/initSagas",
		"/src/infrastructure/network",
		"/src/utility/getQuery",
		"/src/utility/history"
	],
	"collectCoverage": true,
	"collectCoverageFrom": [
		"**/src/**/*.{js|jsx}"
	],
	"testURL": "http://localhost/"
}
